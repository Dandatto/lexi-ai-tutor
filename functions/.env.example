# Firebase Cloud Functions - Environment Variables Template
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to Git

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (optional, usually auto-configured)
FIREBASE_PROJECT_ID=lexi-ai-tutor
FIREBASE_DATABASE_NAME=https://lexi-ai-tutor.firebaseio.com

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://lexi-ai-tutor.web.app,https://lexi-tutor.com

# Security
API_KEY_SECRET=your_secret_key_here
